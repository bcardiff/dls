<h2>Carrito</h2>

<%= render "shared/error_messages", :target => @recipient %>

Total <div class="total"><%= number_to_currency @total %></div>

<% if @products.count > 0 %>
	<% for product in @products %>
		<%= render :partial => 'card', :locals => { :product => product } %>
	<% end %>
<% else %>
	<p>No hay productos seleccionados.</p>
<% end %>

<div class="clear"></div>

Total <div class="total"><%= number_to_currency @total %></div>

<h2>Datos de envío</h2>

<%= form_for @recipient, :url => { :action => :confirmar } do |f| -%>

  <%= f.label :name %>*
  <%= f.text_field :name %><br/>
  
  <%= f.label :email %>*
  <%= f.email_field :email %><br/>

  <%= f.label :phone %>*
  <%= f.text_field :phone %><br/>

  <%= f.label :address %>
  <%= f.text_field :address %><br/>

  <%= f.label :city %>*
  <%= f.text_field :city %><br/>

  <p>* datos obligatorios</p>

  <%= link_to 'Vaciar carrito', {:action => 'vaciar'}, {:confirm => 'Desea borrar la selección de productos?'} %>
  <%= f.submit 'Hacer pedido', :class => 'button', :disable_with => 'Enviando...' %>

<% end -%>