<h2>Formulario de registro</h2>

<p>Reciba nuestras novedades por mail.</p>

<%= render "shared/error_messages", :target => @recipient %>

<%= form_for @recipient, :url => { :action => :registrarse_post } do |f| -%>

  <%= f.label :name %>*
  <%= f.text_field :name %><br/>
  
  <%= f.label :email %>*
  <%= f.email_field :email %><br/>

  <%= f.label :phone %>*
  <%= f.text_field :phone %><br/>

  <%= f.label :address %>
  <%= f.text_field :address %><br/>

  <%= f.label :city %>*
  <%= f.text_field :city %><br/>

  <p>* datos obligatorios</p>

  <%= f.submit 'Registrarme', :class => 'button', :disable_with => 'Enviando...' %>

<% end -%>